FROM lunamidori5/pixelarch:quartz

RUN sudo sed -i 's/Quartz/Amethyst/g' /etc/os-release

# Core utilities
RUN yay -Syu --noconfirm curl && clean-yay
RUN yay -Syu --noconfirm wget && clean-yay
RUN yay -Syu --noconfirm tar && clean-yay
RUN yay -Syu --noconfirm zip && clean-yay
RUN yay -Syu --noconfirm unzip && clean-yay
RUN yay -Syu --noconfirm ripgrep && clean-yay

# Files & formatting
RUN yay -Syu --noconfirm tree && clean-yay
RUN yay -Syu --noconfirm xz && clean-yay
RUN yay -Syu --noconfirm jq && clean-yay
RUN yay -Syu --noconfirm ripgrep && clean-yay

# Visual / editor
RUN yay -Syu --noconfirm lolcat && clean-yay
RUN yay -Syu --noconfirm neovim && clean-yay
RUN yay -Syu --noconfirm nano && clean-yay

# Developer shells
RUN yay -Syu --noconfirm zsh && clean-yay
RUN yay -Syu --noconfirm tmux && clean-yay
RUN yay -Syu --noconfirm fish && clean-yay

# Shell enhancements
RUN yay -Syu --noconfirm bash-completion && clean-yay
RUN yay -Syu --noconfirm zsh-completions && clean-yay
RUN yay -Syu --noconfirm starship && clean-yay

# System info
RUN yay -Syu --noconfirm fastfetch && clean-yay

# Docker tooling
RUN yay -Syu --noconfirm docker && clean-yay
RUN yay -Syu --noconfirm docker-compose && clean-yay